<div id="<%= dom_id book %>">
  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= book.author.name %>
  </p>



  <% if @show_all_fields %>
    <!-- Estos son los campos que mostrara en la vista show -->
    <p>
      <strong>Author information:</strong>
      <%= book.author.information %>
    </p>

    <p>
      <strong>Literary genre:</strong>
      <%= book.literary_genre.name %>
    </p>

    <p>
      <strong>Availability:</strong>
      <% if book.availability %>
        En pr√©stamo
      <% else %>
        Disponible
      <% end %>
    </p>

    <p>
      <strong>Synopsys:</strong>
      <%= book.synopsys %>
    </p>
  <% end %>
</div>

